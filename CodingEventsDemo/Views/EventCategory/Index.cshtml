@model List<CodingEventsDemo.Models.EventCategory>

<h1>All Event Categories</h1>

<li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="EventsCategory" asp-action="Create">Add</a>
</li>

<table>
    <tr>
        <th>Category Name</th>
    </tr>
    @foreach (EventCategory category in Model)
    {
        <tr>
            <td>@category.Name</td>
        </tr>
    }
</table>